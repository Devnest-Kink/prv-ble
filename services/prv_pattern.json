      "UUID": "6908",
      "datastructure": [
        {
          "description": "One set of values per device output",
          "datatype": [
            {
              "description": "Outputs bitfield, all outputs this pattern is using are indicated",
              "datatype": "uint16",
              "count": 1
            },
            {
              "description": "Reserved for future use, will be 0",
              "datatype": "uint8",
              "count": 1
            },
            {
              "description": "Playback status: 0xFF - Stopped, no pattern; 0x01 - Playing; 0x02 - Paused",
              "datatype": "uint8",
              "count": 1
            },
            {
              "description": "Pattern number playing on indicated outputs, 1-indexed",
              "datatype": "uint16",
              "count": 1
            },
            {
              "description": "Pattern Adjust value",
              "datatype": "uint16",
              "count": 1
            }
          ],
          "count": null
        }
      ],
      "properties": {
        "read": true,
        "notify": true,
        "write": false,
        "write_without_response": false
      }
    },
    {
      "name": "Pattern Playback Control",
      "UUID": "6909",
      "datastructure": [
        {
          "description": "Outputs bitfield, all outputs this pattern will use are indicated",
          "datatype": "uint16",
          "count": 1
        },
        {
          "description": "Reserved for future use, set to 0",
          "datatype": "uint8",
          "count": 1
        },
        {
          "description": "Set playback status: 0xFF - Stop, deselect pattern; 0x01 - Play from beginning; 0x02 - Pause; 0x03 - Resume; 0x00 - No change",
          "datatype": "uint8",
          "count": 1
        },
        {
          "description": "Pattern number to apply to selected outputs, 1-indexed, 0x00 for no change",
          "datatype": "uint16",
          "count": 1
        },
        {
          "description": "Pattern Adjust value, will be reset to zero when pattern changes",
          "datatype": "uint16",
          "count": 1
        }
      ],
      "properties": {
        "read": false,
        "notify": false,
        "write": true,
        "write_without_response": false
